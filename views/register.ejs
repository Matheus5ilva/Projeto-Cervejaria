<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/admin/login"><b>Admin</b></a><a href="/">TrocaBeer</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Cadastro</p>

            <%- include("inc/content/alerts") -%>

            <form method="post">
                <div class="form-group has-feedback">
                    <input name="name" type="text" class="form-control" placeholder="Nome" value="<%= body.name%>">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="phone" type="number" class="form-control" placeholder="Telefone" value="<%= body.phone%>">
                    <span class="glyphicon glyphicon-phone-alt form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="mobile_phone" type="number" class="form-control" placeholder="Celular" value="<%= body.mobile_phone%>">
                    <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="address" type="text" class="form-control" placeholder="EndereÃ§o" value="<%= body.address%>">
                    <span class="glyphicon glyphicon-home form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="city" type="text" class="form-control" placeholder="Cidade" value="<%= body.city%>">
                    <span class="glyphicon glyphicon-globe form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="email" type="email" class="form-control" placeholder="E-mail"  value="<%= body.email%>">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input name="password" type="password" class="form-control" placeholder="Senha" value="<%= body.password%>">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <p><a href="" data-toggle="modal" data-target="#ModalLongoExemplo">Li, aceito os termos
