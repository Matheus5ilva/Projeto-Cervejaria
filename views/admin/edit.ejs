<%- include('inc/header') -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Editar Perfil
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin/"><i class="fa fa-home"></i> Home</a></li>
      <li class="active">Editar</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content container-fluid">

    <div class="box">
      <div class="box-header">
        <h3 class="box-title"><%= data.name%></h3>
      </div>
      <form method="post">
        <input type="hidden" name="id_cervejeiro" value="<%= data.id_cervejeiro%>">
        <div class="modal-body">
          <div class="form-group">
            <label for="inputEmailUpdate">E-mail</label>
            <input type="email" class="form-control" id="inputEmailUpdate" name="email" value="<%= data.email%>">
          </div>
          <div class="form-group">
            <label for="inputPhoneUpdate">Telefone</label>
            <input type="number" class="form-control" id="inputPhoneUpdate" name="phone" value="<%= data.phone%>">
          </div>
          <div class="form-group">
            <label for="inputMobilePhoneUpdate">Telefone Celular</label>
            <input type="number" class="form-control" id="inputMobilePhoneUpdate" name="mobile_phone" value="<%= data.mobile_phone%>">
          </div>
          <div class="form-group">
            <label for="inputAddressUpdate">Endere√ßo</label>
            <input type="text" class="form-control" id="inputAddressUpdate" name="address" value="<%= data.address%>">
          </div>
          <div class="form-group">
            <label for="inputCityUpdate">Cidade</label>
            <input type="text" class="form-control" id="inputCityUpdate" name="city" value="<%= data.city%>">
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-info">Editar</button>
        </div>
      </form>
    </div>

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Main Footer -->
<%- include('inc/footer') -%>